<Window x:Class="DuongTuanKiet_SE18D07_A02.Views.BookingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Booking Details" Height="400" Width="500"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Booking Management" FontSize="18" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Content -->
        <TextBlock Grid.Row="1" Text="Booking management functionality will be implemented here." 
                   HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="OK" Click="OkButton_Click"
                    Width="100" Height="35" Margin="0,0,10,0"
                    Background="#27AE60" Foreground="White" FontWeight="SemiBold"/>
            <Button Content="Cancel" Click="CancelButton_Click"
                    Width="100" Height="35"
                    Background="#95A5A6" Foreground="White" FontWeight="SemiBold"/>
        </StackPanel>
    </Grid>
</Window>
